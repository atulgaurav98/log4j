<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
<Properties>
        <!-- Define a placeholder for the log file name -->
        <Property name="logfilename">app</Property>
    </Properties>

    <Appenders>
        <Console name="Console-Appender-Pattern-Layout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="File-Appender-Html-Layout" fileName="./log4j/${logfilename}.html">
            <HTMLLayout/>
        </File>

        <RollingFile name="Rolling-File-Appender-Pattern-Layout" fileName="./log4j/${logfilename}.log" filePattern="logs/${logfilename}-%d{yyyy-MM-dd}.log">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
			<Policies>
                <!-- daily rolling -->
				<TimeBasedTriggeringPolicy interval="1"	modulate="true" />
			</Policies>
		    <DefaultRolloverStrategy max="20"/>
		</RollingFile> 
    </Appenders>

    <Loggers>
        <Root level="ERROR">
            <AppenderRef ref="Console-Appender-Pattern-Layout"/>
            <AppenderRef ref="File-Appender-Html-Layout"/>
            <AppenderRef ref="Rolling-File-Appender-Pattern-Layout"/>
        </Root>
    </Loggers>
</Configuration>
